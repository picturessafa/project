<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff6f6f6"
    android:orientation="vertical">
<ImageView
    android:id="@+id/nofile2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="50dp"
    android:background="@mipmap/nofile"/>
    <TextView
        android:id="@+id/nofile_te"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nofile2"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="您没有可用的现金劵哦~" />
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="赚取现金劵>"
        android:textSize="12dp"
        android:textColor="@color/red"
        android:background="@drawable/redbolder"
        android:layout_below="@+id/nofile_te"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:minHeight="60dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ad_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="宋家敏"
        />
    <TextView
        android:id="@+id/ad_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ad_name"
        android:layout_marginLeft="5dp"
        android:text="13710164316"/>
    <TextView
        android:id="@+id/ad_adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ad_name"
        android:layout_marginTop="2dp"
        android:textSize="12dp"
        android:text="广东省广州市白云区珠江公寓"/>
    <View
        android:id="@+id/ad_view"
        android:layout_width="fill_parent"
        android:layout_height="0.100000024dip"
        android:background="#ff929292"
        android:layout_below="@+id/ad_adress"/>
    <Button
        android:id = "@+id/bianji"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:background="@null"
        android:drawableLeft="@mipmap/bg_bianji"
        android:text="编辑"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:layout_below="@+id/ad_view"
        android:layout_toLeftOf="@+id/shanchu"
        android:layout_marginTop="5dp"/>

    <Button
        android:id = "@+id/shanchu"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:background="@null"
        android:textSize="12dp"
        android:drawableLeft="@mipmap/bg_shanchu"
        android:text="删除"
        android:textColor="@color/black"
        android:layout_below="@+id/ad_view"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"/>
</RelativeLayout>
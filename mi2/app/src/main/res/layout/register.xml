<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40.0dip">

        <ImageView
            android:id="@+id/backgur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.0dip"
            android:layout_centerVertical="true"
            android:background="@mipmap/bg_back_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30.0dip"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="#ff000000"
            android:textSize="18.0dip" />
    </RelativeLayout>
    <EditText
        android:id="@+id/login_input_phone_et"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp"
        android:ems="10"
        android:hint="请输入手机号"
        android:inputType="phone" />

    <requestFocus />
    <EditText
        android:id="@+id/login_input_password"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_input_phone_et"
        android:layout_below="@+id/login_input_phone_et"
        android:layout_marginTop="44dp"
        android:hint="请输入密码"
        android:inputType="textPassword"/>
    <EditText
        android:id="@+id/login_input_code_et"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_input_password"
        android:layout_below="@+id/login_input_password"
        android:layout_marginTop="44dp"
        android:hint="请输入验证码"
 >
    </EditText>

    <Button
        android:id="@+id/login_request_code_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/login_input_phone_et"
        android:layout_alignTop="@+id/login_input_code_et"
        android:text="获取验证码" />

    <Button
        android:id="@+id/login_commit_btn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:background="@drawable/enable"
        android:layout_alignLeft="@+id/login_input_code_et"
        android:layout_below="@+id/login_input_code_et"
        android:layout_marginTop="44dp"
        android:textColor="@color/white"
        android:text="注册" />

</RelativeLayout>